<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="230.0" prefWidth="339.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Project.Controllers.LoginController">
   <children>

      <Label layoutX="112.0" layoutY="14.0" prefHeight="31.0" prefWidth="118.0" text="Welcome">
         <font>
            <Font name="Arial Bold" size="26.0" />
         </font>
      </Label>

      <Label layoutX="28.0" layoutY="72.0" text="User:" />
      <TextField fx:id="txtLogin" layoutX="98.0" layoutY="68.0" prefHeight="25.0" prefWidth="200.0" style="-fx-background-radius: 15; -fx-border-radius: 15;" />

      <Label layoutX="28.0" layoutY="112.0" text="Password:" />
      <PasswordField fx:id="txtPassword" layoutX="98.0" layoutY="108.0" prefHeight="25.0" prefWidth="200.0" style="-fx-background-radius: 15; -fx-border-radius: 15;" />

      <Label fx:id="lblError" layoutX="98.0" layoutY="138.0" textFill="red" visible="false" />

      <Button layoutX="104.0" layoutY="172.0" mnemonicParsing="false" onAction="#onLoginButtonClick" prefHeight="35.0" prefWidth="137.0" style="-fx-background-radius: 15; -fx-font-size: 16;" text="Login">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <CheckBox layoutX="120.0" layoutY="147.0" mnemonicParsing="false" onAction="#OnRememberMe" text="Remember me" />
   </children>
</AnchorPane>
